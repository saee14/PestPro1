<?xml version="1.0" encoding="UTF-8"?>

    <androidx.cardview.widget.CardView
    android:id="@+id/Card_View"
    tools:ignore="MissingDefaultResource"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image1"
        android:layout_width="131dp"
        android:layout_height="129dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_1"
        app:shapeAppearanceOverlay="@style/roundimageview"
        tools:ignore="MissingClass" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pest_title"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="164dp"
        android:textColor="#3A3A3A"
        android:fontFamily="@font/malgun_bold"
        android:text="Armyworm"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pest_label"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="164dp"
        android:textColor="#3A3A3A"
        android:fontFamily="@font/malgun_regular"
        android:text="Delivered: 20/01/2021"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pest_date"
        android:fontFamily="@font/malgun_regular"
        android:layout_marginTop="109dp"
        android:layout_marginLeft="164dp"
        android:textColor="#3A3A3A"
        android:text="Result: 14/11/2000"/>

</androidx.cardview.widget.CardView>

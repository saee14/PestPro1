<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/sort_background"
    android:layout_marginEnd="11dp"
    android:layout_marginStart="11dp"
    android:layout_gravity="bottom"
    android:layout_height="160dp"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        android:textSize="15sp"
        android:textColor="#3A3A3A"
        android:text="Sort Results By"
        android:fontFamily="@font/malgun_bold"
        android:layout_marginBottom="16dp"
        android:id="@+id/textView6"/>

    <TextView
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        android:textSize="15sp"
        android:textColor="#3A3A3A"
        android:text="Old to New"
        android:fontFamily="@font/malgun_semilight"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:drawableLeft="@drawable/ic_sort"/>

    <TextView
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        android:textSize="15sp"
        android:textColor="#3A3A3A"
        android:text="New to Old"
        android:fontFamily="@font/malgun_semilight"
        android:layout_marginBottom="12dp"
        android:id="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:drawableLeft="@drawable/ic_sort"/>

    <TextView
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        android:textSize="15sp"
        android:textColor="#3A3A3A"
        android:text="A-Z (Ascending)"
        android:fontFamily="@font/malgun_semilight"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:drawableLeft="@drawable/ic_sort"/>

    <TextView
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        android:textColor="#3A3A3A"
        android:text="Z-A (Descending)"
        android:fontFamily="@font/malgun_semilight"
        android:id="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:drawableLeft="@drawable/ic_sort"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:ignore="MissingDefaultResource"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout

        android:layout_height="190dp"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:id="@+id/RelativeLayoutNewActivity">

        <com.google.android.material.imageview.ShapeableImageView
            tools:ignore="MissingClass"
            android:layout_height="129dp"
            android:layout_width="131dp"
            android:id="@+id/image1n"
            app:shapeAppearanceOverlay="@style/roundimageview"
            android:src="@drawable/image_1"
            android:scaleType="centerCrop"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="191dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="13dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/pest_titlen"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="164dp"
            android:textColor="#3A3A3A"
            android:text="Severity"
            android:fontFamily="@font/malgun_bold"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/pest_des"
            android:layout_marginTop="40dp"
            android:layout_marginStart="164dp"
            android:textColor="#3A3A3A"
            android:text="Moderately Dangerous, may kill the plant if not treated."
            android:fontFamily="@font/malgun_regular"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/pest_sol"
            android:layout_marginTop="55dp"
            android:layout_marginStart="164dp"
            android:textColor="#3A3A3A"
            android:text="Solution by \nDr. Amit Shukla"
            android:fontFamily="@font/malgun_regular"
            android:layout_below="@id/pest_des"/>

    </RelativeLayout>

    <ScrollView
        tools:ignore="MissingConstraints"
        android:layout_height="wrap_content"
        android:layout_width="411dp"
        android:id="@+id/scrollView2"
        android:layout_below="@id/RelativeLayoutNewActivity">

        <RelativeLayout
            tools:ignore="MissingConstraints"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview4"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="A"
                android:fontFamily="@font/malgun_bold"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview5"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="B"
                android:fontFamily="@font/malgun_regular"
                android:layout_below="@id/textview4"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview6"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="F"
                android:fontFamily="@font/malgun_bold"
                android:layout_below="@id/textview5"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview7"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black1"
                android:text="E"
                android:fontFamily="@font/malgun_bold"
                android:layout_below="@id/textview6"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview8"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="D"
                android:fontFamily="@font/malgun_regular"
                android:layout_below="@id/textview7"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview9"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="D"
                android:fontFamily="@font/malgun_regular"
                android:layout_below="@id/textview8"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview10"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black1"
                android:text="E"
                android:fontFamily="@font/malgun_bold"
                android:layout_below="@id/textview9"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview11"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:text="D"
                android:fontFamily="@font/malgun_regular"
                android:layout_below="@id/textview10"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/textview12"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black1"
                android:text="C"
                android:fontFamily="@font/malgun_bold"
                android:layout_below="@id/textview11"/>

            <RatingBar
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/rating_bar"
                android:layout_below="@id/textview12"
                android:layout_marginStart="20dp"
                android:stepSize="0.5"
                android:numStars="5"/>

            <EditText
                android:layout_height="150dp"
                android:layout_width="346dp"
                android:background="@drawable/edittext_border"
                android:id="@+id/edit_txt"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:layout_below="@id/rating_bar"
                android:textColorHint="#515151"
                android:hint="Comments (Optional)"
                android:gravity="start"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="150dp"
                android:text="Submit"
                android:layout_below="@id/edit_txt"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
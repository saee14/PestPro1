<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    tools:context=".activities.Camera"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        app:title="Pest Information"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/green"
        android:id="@+id/toolbar_cam">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView3"
        android:textSize="15sp"
        android:textColor="@color/green"
        android:text="Capture the image and share us pest information"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/malgun_bold"
        android:layout_marginTop="28dp"
        android:layout_below="@id/toolbar_cam"/>

    <Button
        android:layout_height="134dp"
        android:layout_width="128dp"
        android:background="@drawable/rounded_button"
        android:id="@+id/capture_image"
        android:textColor="@color/white"
        android:text="Capture Image"
        android:layout_marginLeft="220dp"
        android:fontFamily="@font/malgun_bold"
        android:layout_marginTop="28dp"
        android:layout_below="@id/textView3"
        android:textAllCaps="false"
        android:layout_marginRight="20dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_height="141dp"
        android:layout_width="163dp"
        android:id="@+id/camera1"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="28dp"
        android:layout_below="@id/textView3"
        android:layout_marginRight="195dp"
        tools:layout_editor_absoluteY="138dp"
        tools:layout_editor_absoluteX="35dp"
        app:srcCompat="@drawable/plus"
        app:shapeAppearanceOverlay="@style/roundimageview"
        android:layout_marginStart="41dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_height="81dp"
        android:layout_width="73dp"
        android:id="@+id/camera5"
        android:layout_marginLeft="282dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/camera1"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/plus"
        app:shapeAppearanceOverlay="@style/roundimageview"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_height="81dp"
        android:layout_width="73dp"
        android:id="@+id/camera4"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/camera1"
        android:layout_marginRight="104dp"
        app:srcCompat="@drawable/plus"
        app:shapeAppearanceOverlay="@style/roundimageview"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_height="81dp"
        android:layout_width="73dp"
        android:id="@+id/camera3"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/camera1"
        android:layout_marginRight="195dp"
        app:srcCompat="@drawable/plus"
        app:shapeAppearanceOverlay="@style/roundimageview"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_height="81dp"
        android:layout_width="73dp"
        android:id="@+id/camera2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/camera1"
        android:layout_marginRight="283dp"
        tools:layout_editor_absoluteX="116dp"
        app:srcCompat="@drawable/plus"
        app:shapeAppearanceOverlay="@style/roundimageview"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView4"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:text="Add Description"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/malgun_bold"
        android:layout_marginTop="30dp"
        android:layout_below="@id/camera2"/>

    <EditText
        android:layout_height="154dp"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_border"
        android:id="@+id/edit_txt_cam"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/textView4"
        android:layout_marginRight="20dp"
        android:gravity="top" android:hint="Add Details"/>

    <Button
        android:layout_height="48dp"
        android:layout_width="123dp"
        android:background="@drawable/rounded_button"
        android:id="@+id/submit_btn"
        android:textColor="@color/white"
        android:text="Submit"
        android:layout_marginLeft="150dp"
        android:fontFamily="@font/malgun_bold"
        android:layout_marginTop="33dp"
        android:layout_below="@id/edit_txt_cam"
        android:textAllCaps="false"
        android:layout_marginRight="120dp"
        android:shadowColor="@color/grey"/>

</RelativeLayout>